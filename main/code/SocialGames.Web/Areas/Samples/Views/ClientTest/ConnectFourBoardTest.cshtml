@using Microsoft.Samples.SocialGames.Web.Areas.Samples.Extensions;

@{
    ViewBag.Title = "CanvasTest";
}

<script src="@Url.AreaContent("Scripts/game/ConnectFourBoard.js")" type="text/javascript"></script>
<script src="@Url.AreaContent("Scripts/game/ConnectFourGame.js")" type="text/javascript"></script>

<h2>ConnectFourBoard Test</h2>

<canvas id="board" width="600" height="600">
</canvas>

<script type="text/javascript">
    var canvas = document.getElementById("board");
    var board = new ConnectFourBoard(canvas, 6, 6);
    var game = new ConnectFourGame(6, 6);

    board.onMove = function (x) {
        if (!game.isValid(x, currentColor))
            return;
        var y = game.move(x, currentColor);
        board.drawMove(x, y, currentColor);
        currentColor = nextColor(currentColor);

        if (game.hasWinner()) {
            alert(game.getWinner() + " won!");
            board.onMove = null;
        }
    };

    var currentColor = C4Color.Cross;

    function nextColor(color) {
        if (color === C4Color.Cross)
            return C4Color.Circle;
        if (color === C4Color.Circle)
            return C4Color.Cross;
    }
</script>